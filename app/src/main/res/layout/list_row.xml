<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/row_title"
                android:text="Title"
                android:textSize="22sp"
                android:layout_margin="2dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/row_description"
                android:textSize="19sp"
                android:text="description"
                android:textStyle="italic"
                android:layout_below="@+id/row_title"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/row_dateadded"
                android:textSize="19sp"
                android:text="dateadded"
                android:textStyle="italic"
                android:layout_margin="2dp"
                android:layout_below="@id/row_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TableRow
                android:orientation="horizontal"
                android:layout_height="wrap_content"
              android:layout_alignBottom="@+id/row_dateadded"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true">

                <Button
                    android:id="@+id/row_edit_button"
                    android:layout_width="30dp"
                    android:layout_margin="5dp"
                    android:background="@android:drawable/ic_menu_edit"
                    android:layout_height="30dp"/>
                <Button
                    android:id="@+id/row_delete_button"
                    android:layout_width="30dp"
                    android:layout_marginRight="5dp"
                    android:background="@android:drawable/ic_menu_delete"
                    android:layout_margin="2dp"
                    android:layout_height="30dp"/>


            </TableRow>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>




</LinearLayout>